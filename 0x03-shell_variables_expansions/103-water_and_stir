#!/bin/bash
printf "%s\n" "$(result=$(echo $WATER | tr water 01234); result=$((result + $(echo $STIR | tr stir. 01234))); while [[ $result -gt 0 ]]; do digit=$((result % 8)); result=$((result / 8)); case $digit in 0) printf "%s" "b" ;; 1) printf "%s" "e" ;; 2) printf "%s" "s" ;; 3) printf "%s" "t" ;; 4) printf "%s" "c" ;; 5) printf "%s" "h" ;; 6) printf "%s" "o" ;; 7) printf "%s" "l" ;; esac; done | tac)"
