#!/bin/bash
printf "%s\n" "$(result=$(echo $WATER | tr water 01234) result=$((result + $(echo $STIR | tr stir. 01234))) base_bestchol=""; while [[ $result -gt 0 ]]; do digit=$((result % 8)); case $digit in 0) base_bestchol+="b" ;; 1) base_bestchol+="e" ;; 2) base_bestchol+="s" ;; 3) base_bestchol+="t" ;; 4) base_bestchol+="c" ;; 5) base_bestchol+="h" ;; 6) base_bestchol+="o" ;; 7) base_bestchol+="l" ;; esac; result=$((result / 8)); done; echo "$base_bestchol" | rev)"
